@model LoginApplication.Models.User

@{
	ViewData["Title"] = "Delete";
}

<h2>Delete User</h2>

<hr />

<h4 class="mb-3">Are you sure you want to delete this user?</h4>

<dl class="row">
	<dt class = "col-sm-2">
		Username
	</dt>
	<dd class = "col-sm-10">
		@Html.DisplayFor(model => model.Username)
	</dd>
	<dt class = "col-sm-2">
		Admin
	</dt>
	<dd class = "col-sm-10">
		@Html.DisplayFor(model => model.IsAdmin)
	</dd>
</dl>

<div class="form-group mt-3"> 
	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
	</form>
</div>